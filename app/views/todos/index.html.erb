<title>Piyush's Todo App </title>
<div class="container">
  <div class="row">
    <div class="span4">
      <h1>Piyush Dummy Todo App</h1>
      <p>Your everyday todos here</p>
      <%= form_for @new_todo, :url => { :action => "add" }  do |f|  %>
          <%= f.text_field  :todo_item %>
          <%= f.submit "Add todo", class: "btn btn-primary" %>
      <%end%>

      <div class="well">
        <% @todo_items.each do |t| %>
            <li> <%= t.todo_item %> </li>
        <% end %>
      </div> <!-- well -->
    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- co  ntainer -->


<% if !flash[:error].nil? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert" >Ã—</button>
      <strong><%= flash[:error] %></strong>
    </div>
<% end %>


<% if flash[:success] %>
    <div class="alert alert-success">
      #show flash[:success] message here
    </div>
<% end %>